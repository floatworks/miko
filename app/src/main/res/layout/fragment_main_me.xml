<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/me"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="12dp"
                    android:id="@+id/iv_main_me_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:background="#000000"
                   />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_main_me_username"
                        android:layout_marginTop="12dp"
                        android:textSize="20sp"
                        android:text="王吉"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_main_me_userintro"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:text="男，焦作市"/>
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_main_me_editprofile"
                        android:text="点击编辑资料"
                        android:layout_below="@id/tv_main_me_userintro"
                        android:layout_toRightOf="@id/iv_main_me_avatar"
                        android:background="@drawable/yello_black"
                        android:layout_marginRight="12dp"
                        />

                </LinearLayout>



            </LinearLayout>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/yello300"
                android:id="@+id/btn_main_me_checkInviteNotice"
                android:text="查看邀请信息"/>
        </LinearLayout>


    </LinearLayout>
