<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/me"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_margin="12dp"
                    android:id="@+id/iv_main_me_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:background="#000000"
                   />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_main_me_username"
                    android:layout_toRightOf="@id/iv_main_me_avatar"
                    android:layout_marginTop="12dp"
                    android:textSize="20sp"
                    android:text="王吉"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_main_me_userintro"
                    android:layout_toRightOf="@id/iv_main_me_avatar"
                    android:layout_below="@id/tv_main_me_username"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="男，焦作市"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_main_me_editprofile"
                    android:text="点击编辑资料"
                    android:layout_below="@id/tv_main_me_userintro"
                    android:layout_toRightOf="@id/iv_main_me_avatar"
                    android:background="@drawable/yello_black"
                   />
                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_main_me_checkInviteNotice"
                    android:text="查看邀请信息"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
